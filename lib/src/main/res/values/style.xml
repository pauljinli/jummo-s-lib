<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowAnimationStyle">@style/ActivityInOutAnimation</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:keepScreenOn">true</item>
    </style>

    <style name="ActivityInOutAnimation" parent="@android:style/Animation.Activity">
        <item name="android:taskToFrontEnterAnimation">@anim/task_front_enter</item>
        <item name="android:taskToFrontExitAnimation">@anim/task_front_exit</item>
    </style>

    <style name="ToastAnimation">
        <item name="@android:windowEnterAnimation">@anim/toast_anim_in</item>
        <item name="@android:windowExitAnimation">@anim/toast_anim_out</item>
    </style>

    <style name="UserGuideAnimation">
        <item name="@android:windowEnterAnimation">@anim/guide_anim_in</item>
        <item name="@android:windowExitAnimation">@anim/guide_anim_out</item>
    </style>

</resources>